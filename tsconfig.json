{
    "compilerOptions": {
        "rootDir": "./src", 
        //"outDir": "./dist", 
        "module": "ES6", 
        "target": "ES6",
        "strict": true,
        "allowJs": false,
        "allowUnreachableCode": false, 
        "noFallthroughCasesInSwitch": true, 
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true, 
        "moduleResolution": "node",
        "noImplicitAny": true, 

        //"sourceMap": true, 
        // "declaration": true,

        // these are set to the value of "strict", can be overridden here if needed
        // "noImplicitAny": true, 
        // "noImplicitThis": true, 
        // "strictFunctionTypes": true, 
        // "strictNullChecks": true,
        // "strictPropertyInitialization": true,
    }, 
    "exclude": [
        "dist/**",
        "dev/**", 
        "docs/**", 
        ""
    ],
}